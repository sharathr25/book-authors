        </div>
      </nav>
      <main>
          <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <% for (let i = 0; i < authordata.length; i += 1) { %>
                        <tr>
                            <td>
                                <%= i+1 %> 
                            </td>
                            <td>
                                <a href="/author/<%= authordata[i].id %>"><%= authordata[i].name %></a>
                            </td>
                        </tr>
                        <%  } %>
                    </tbody>
                </table>
            </div>
            </div>
      </main>
</body>
