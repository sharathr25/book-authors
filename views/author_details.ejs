<!DOCTYPE html>
<html lang="en">
<head>
    <% include head %>
</head>
<body class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">WEBBOOK</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/home">HOME</a></li>
            <li><a href="/books">BOOKS</a></li>
            <li  class="active"><a href="/authors">AUTHORS</a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout">Log out</a></li>
          </ul>
        </div>
      </nav>
<main>
    <div class="table-responsive">          
        <table class="table">
          <tbody>
              <tr>
                  <td>ID</td>
                  <td><%= data[0].id %></td>
              </tr>
              <tr>
                  <td>NAME</td>
                  <td><%= data[0].name %></td>
              </tr>
              <tr>
                    <td>ABOUT</td>
                    <td><%= data[0].about %></td>
              </tr>
              <tr>
                    <td>PLACE</td>
                    <td><%= data[0].place %></td>
              </tr>
              <% if(data[0].title !== 'undefined') { %>
              <tr>
                <td>BOOKS</td>
                <td><% for(let i=0; i < data.length; i++) { %>
                    <p><a href="/bookisbn/<%=data[i].isbn%>"><%=  data[i].title %></a></p>
                    <% } %>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
        </div>
      </div>
</main>
</body>
</html>